= content_for :head do
  =stylesheet_link_tag "sign_in"
.container
  = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin', role: :form} ) do |f|
    %h2.form-signin-heading= t('layout.sign_in')
    = f.email_field :email, autofocus: true, class: 'form-control', placeholder: t('sessions.new.email')
    = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: t('sessions.new.password')

    - if devise_mapping.rememberable?
      = f.label :remember_me, class: :checkbox do
        = f.check_box :remember_me
        =t('sessions.new.remember_me')
    = f.button t('layout.sign_in'), class: ['btn', 'btn-lg', 'btn-primary', 'btn-block']
    %br
    = render "devise/shared/links"
