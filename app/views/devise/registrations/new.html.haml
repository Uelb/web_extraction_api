= content_for :head do
  =stylesheet_link_tag "sign_up"
.container
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-signin', role: :form}) do |f|
    = devise_error_messages!
    %h2.form-signin-heading= t('layout.sign_up')
    = f.email_field :email, autofocus: true, class: 'form-control', placeholder: t('sessions.new.email')
    = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: t('sessions.new.password')
    = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: t('sessions.new.password_confirmation')
    = f.button t('layout.sign_up'), class: ['btn', 'btn-lg', 'btn-success', 'btn-block']
    %br
    = render "devise/shared/links"