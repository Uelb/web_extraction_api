!!!
%html
  %head>
    %title Web extraction engine
    = stylesheet_link_tag    "application", "dashboard", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    .navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
      .container-fluid
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          =link_to "Web extraction engine", root_path, class: 'navbar-brand'
        .navbar-collapse.collapse
          .navbar-right.navbar-form= link_to('Logout', destroy_user_session_path, :method => :delete, class: ['btn', 'btn-danger'])
          %ul.nav.navbar-nav.navbar-right
            %li
              =link_to "Dashboard", new_website_path
            %li
              =link_to "Help", documentation_path
    .container-fluid
      .row
        .col-sm-3.col-md-2.sidebar
          %ul.nav.nav-sidebar
            %li
              = link_to "New extraction", new_website_path
            %li
              = link_to "Websites List", websites_path
            %li
              =link_to "Documentation", documentation_path

        .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
          = yield
    .custom_footer= render 'pages/footer'